<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/abc_action_bar_default_height_material"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    android:background="@color/primary"
    android:elevation="@dimen/toolbarElevation"
    android:layout_gravity="top">

    <ImageView
        android:layout_gravity="right"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:gravity="center_vertical"
        android:src="@drawable/abc_ic_go_search_api_mtrl_alpha"
        android:tint="@color/primary_text_default_material_dark"
        android:rotation="180"
        android:visibility="gone"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:id="@+id/rightDrawerToggle"/>

    <ImageView
        android:layout_width="56dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_gravity="right"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:background="?attr/selectableItemBackground"
        android:visibility="gone"
        android:id="@+id/toolbarButton"
        android:src="@drawable/ic_settings" />

    <ImageView
        android:layout_width="56dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_gravity="right"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:background="?attr/selectableItemBackground"
        android:visibility="gone"
        android:id="@+id/toolbarSortButton"
        android:src="@drawable/ic_filter_variant" />




</android.support.v7.widget.Toolbar>
